{
    "name": "dlunamontilla/dlunire",
    "description": "DLUnire cuenta con un motor de plantillas, modelos, controladores y un sistema de rutas. Además, cuenta con analizador sintáctico para leer archivos `.env.type` como variables de entorno con tipos estáticos.",
    "type": "project",
    "license": "MIT",
    "homepage": "https://dlunire.pro/",
    "version": "v0.0.12",
    "autoload": {
        "psr-4": {
            "DLUnire\\": "app/",
            "Framework\\": "dlunire/",
            "Boot\\": "boot/"
        }
    },
    "authors": [
        {
            "name": "David E Luna M",
            "email": "davidlunamontilla@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require-dev": {
        "phpunit/phpunit": "^10.3"
    },
    "config": {
        "optimize-autoloader": true
    },
    "require": {
        "dompdf/dompdf": "^2.0",
        "dlunamontilla/dltools": "^0.0.16"
    },

    "scripts": {
        "dev": "php -S localhost:3000 -t public/"
    }
}
